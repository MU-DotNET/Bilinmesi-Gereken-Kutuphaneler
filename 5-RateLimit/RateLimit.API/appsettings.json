{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "IpRateLimiting": {
    "QuotaExceededResponse": {
      "Content": "{{\"mesaj\" : \"İstek Limiti Aşıldı.\", \"Detay\" :\" İzin verilen istek sayısı {1}'de {0} istektir. {2} saniye sonra tekrar deneyiniz.\" }}",
      "ContentType": "application/json"
    },
    "EnableEndpointRateLimiting": true,
    "RealIpHeader": "x-real-ip",
    "StackBlockedRequests": false,
    "HttpStatusCode": 429,
    "IpWhitelist": [ "127.0.0.1" ],
    "EndpointWhileList": [ "put:/api/products" ],
    "GeneralRules": [
      {
        "Endpoint": "GET:/api/products",
        "Period": "20s",
        "Limit": 3
      },
      {
        "Endpoint": "POST:/api/products",
        "Period": "1h",
        "Limit": 100
      },
      {
        "Endpoint": "*:/api/products/*",
        "Period": "30s",
        "Limit": 5
      },
      {
        "Endpoint": "*:/api/categories",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "*:/api/categories",
        "Period": "1d",
        "Limit": 500
      }
    ]
  },
  "IpRateLimitPolicies": { //Policy içinde tanımlanmış kurallar sizin genel kurallarınızı ezer. Tabi kapsamı dar olana göre!!!
    "IpRules": [
      {
        "Ip": "::1",
        "Rules": [
          {
            "Endpoint": "*",
            "Period": "90s",
            "Limit": 3
          }
        ]
      }
    ]
  },
  "ClientRateLimiting": {
    "QuotaExceededResponse": {
      "Content": "{{\"mesaj\" : \"İstek Limiti Aşıldı.\", \"Detay\" :\" İzin verilen istek sayısı {1}'de {0} istektir. {2} saniye sonra tekrar deneyiniz.\" }}",
      "ContentType": "application/json"
    },
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "HttpStatusCode": 429,
    "ClientIdHeader": "X-ClientId",
    "ClientWhitelist": [ "client-1" ],
    "EndpointWhileList": [ "put:/api/products" ],
    "GeneralRules": [
      {
        "Endpoint": "GET:/api/products",
        "Period": "20s",
        "Limit": 3
      },
      {
        "Endpoint": "POST:/api/products",
        "Period": "1h",
        "Limit": 100
      },
      {
        "Endpoint": "*:/api/products/*",
        "Period": "30s",
        "Limit": 5
      },
      {
        "Endpoint": "*:/api/categories",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "*:/api/categories",
        "Period": "1d",
        "Limit": 500
      }
    ]
  }

}
